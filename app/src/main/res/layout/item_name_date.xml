<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
    android:layout_marginVertical="@dimen/activity_vertical_margin"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/listview_margin"
        android:layout_marginBottom="@dimen/listview_margin"
        />

    <!-- espace entre les deux composants -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.0001"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="@dimen/message_date"
        android:textColor="@color/disabled_color"
        android:layout_gravity="center" />

</LinearLayout>